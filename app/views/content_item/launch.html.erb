<% provide(:title, 'Content Item Message Generator') %>
<h1>Create a content item message</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_tag(@content_item_return_url, method: :post) do %>
        <p>lti_message_type: <%= text_field_tag(:lti_message_type, "ContentItemSelection") %>
        <p>lti_version: <%= text_field_tag(:lti_version, "LTI-1p0") %></p>
        <p>content_items:</p>
        <p><%= text_area_tag(:content_items,
                             "{  \"@context\": \"http://purl.imsglobal.org/ctx/lti/v1/ContentItem\",
                \"@graph\": [{
                         \"@type\": \"LtiLinkItem\",
                         \"@id\": \"http://example.com/messages/launch\",
                         \"url\": \"http://example.com/messages/launch\",
                         \"title\": \"Link Title\",
                         \"text\": \"Link Text\",
                         \"mediaType\": \"application/vnd.ims.lti.v1.ltilink\",
                         \"windowTarget\": \"blank\",
                         \"placementAdvice\": {
                                \"presentationDocumentTarget\": \"window\"
                                }
                             }]
                }", size: "70x25"
               ) %></p>
        <p><%= submit_tag("Send message") %></p>
    <% end %>
  </div>
